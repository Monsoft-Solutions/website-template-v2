{
    "name": "shadcn-ui-monorepo",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "typecheck": "turbo typecheck",
        "format": "prettier --cache --write .",
        "format:check": "prettier --cache --check .",
        "prepare": "husky",
        "db:generate": "turbo db:generate --filter=@workspace/db",
        "db:migrate": "turbo db:migrate --filter=@workspace/db",
        "db:push": "turbo db:push --filter=@workspace/db",
        "db:studio": "turbo db:studio --filter=@workspace/db",
        "db:seed": "turbo db:seed --filter=@workspace/db"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@workspace/eslint-config": "workspace:*",
        "@workspace/typescript-config": "workspace:*",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.4",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.0",
        "turbo": "^2.5.8",
        "typescript": "5.7.3"
    },
    "packageManager": "pnpm@10.4.1",
    "engines": {
        "node": ">=20"
    }
}
