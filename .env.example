# Database Configuration (Required)
POSTGRES_URL="postgresql://user:password@localhost:5432/dbname"

# Blog API Authentication (Required)
BLOG_API_KEY="your-secure-api-key-here"

# Vercel Blob Storage (Optional - for blog featured images)
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token-here"

# Vercel URL (Automatically set by Vercel, Optional)
VERCEL_URL=""

# Environment (Automatically set by Next.js)
NODE_ENV="development"

# Site Configuration (Optional - defaults in site-config.ts)
NEXT_PUBLIC_SITE_URL="https://example.com"
NEXT_PUBLIC_SITE_NAME="My Website"
NEXT_PUBLIC_SITE_DESCRIPTION="A modern web application built with Next.js"

# Social Media (Optional)
NEXT_PUBLIC_TWITTER_HANDLE="@yourbrand"
NEXT_PUBLIC_FACEBOOK_APP_ID=""

# Localization (Optional)
NEXT_PUBLIC_LOCALE="en-US"

# SEO (Optional)
NEXT_PUBLIC_ENABLE_INDEXING="false"

# Analytics Configuration (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=""
NEXT_PUBLIC_CLARITY_PROJECT_ID=""
NEXT_PUBLIC_GTM_ID=""

# To show the CAll NOW button
NEXT_PUBLIC_ENABLE_MOBILE_CALL_BUTTON=true
