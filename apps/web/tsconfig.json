{
    "extends": "@workspace/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@/lib/*": ["./lib/*"],
            "@/types/*": ["./lib/types/*"],
            "@workspace/ui/*": ["../../packages/ui/src/*"],
            "@workspace/db/*": ["../../packages/db/src/*"],
            "@workspace/seo/*": ["../../packages/seo/src/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "next.config.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
