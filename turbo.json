{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"],
            "env": [
                "NODE_ENV",
                "POSTGRES_URL",
                "BLOG_API_KEY",
                "BLOB_READ_WRITE_TOKEN",
                "VERCEL_URL",
                "NEXT_PUBLIC_SITE_URL",
                "NEXT_PUBLIC_SITE_NAME",
                "NEXT_PUBLIC_SITE_DESCRIPTION",
                "NEXT_PUBLIC_TWITTER_HANDLE",
                "NEXT_PUBLIC_FACEBOOK_APP_ID",
                "NEXT_PUBLIC_LOCALE",
                "NEXT_PUBLIC_ENABLE_INDEXING",
                "NEXT_PUBLIC_GA_MEASUREMENT_ID",
                "NEXT_PUBLIC_CLARITY_PROJECT_ID",
                "NEXT_PUBLIC_GTM_ID"
            ]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "format": {
            "dependsOn": ["^format"],
            "outputs": [],
            "cache": false
        },
        "typecheck": {
            "dependsOn": ["^typecheck"],
            "outputs": ["*.tsbuildinfo"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "env": [
                "NODE_ENV",
                "POSTGRES_URL",
                "BLOG_API_KEY",
                "BLOB_READ_WRITE_TOKEN",
                "VERCEL_URL",
                "NEXT_PUBLIC_SITE_URL",
                "NEXT_PUBLIC_SITE_NAME",
                "NEXT_PUBLIC_SITE_DESCRIPTION",
                "NEXT_PUBLIC_TWITTER_HANDLE",
                "NEXT_PUBLIC_FACEBOOK_APP_ID",
                "NEXT_PUBLIC_LOCALE",
                "NEXT_PUBLIC_ENABLE_INDEXING",
                "NEXT_PUBLIC_GA_MEASUREMENT_ID",
                "NEXT_PUBLIC_CLARITY_PROJECT_ID",
                "NEXT_PUBLIC_GTM_ID"
            ]
        },
        "db:generate": {
            "cache": false,
            "outputs": ["migrations/**"]
        },
        "db:migrate": {
            "cache": false,
            "outputs": []
        },
        "db:push": {
            "cache": false,
            "outputs": []
        },
        "db:studio": {
            "cache": false,
            "persistent": true
        },
        "db:seed": {
            "cache": false,
            "outputs": []
        }
    }
}
