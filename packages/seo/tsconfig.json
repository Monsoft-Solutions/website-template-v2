{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@workspace/typescript-config/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ES2022",
        "jsx": "react-jsx",
        "types": ["node", "react"],
        "skipLibCheck": true,
        "noEmit": false,
        "emitDeclarationOnly": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
